{
  "name": "@media-center/app-tv",
  "version": "0.0.1",
  "private": true,
  "main": "index.js",
  "scripts": {
    "android": "EXPO_TV=1 expo run:android --no-bundler",
    "android:clean": "EXPO_TV=1 cd android && ./gradlew clean ; cd -",
    "android:release": "EXPO_TV=1 expo run:android --variant release",
    "ios": "expo run:ios",
    "start": "expo start -d --lan",
    "tvos": "expo run:ios --scheme PristineExpoTV-tvOS --device \"Apple TV\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "update": "eas update",
    "typecheck": "tsc --build",
    "typecheck:open": "code `yarn typecheck | grep error | cut -d \"(\" -f 1 | uniq | xargs`"
  },
  "dependencies": {
    "@gorhom/portal": "^1.0.14",
    "@media-center/algorithm": "*",
    "@media-center/server": "*",
    "@media-center/turbo-vlc": "*",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "axios": "^1.5.0",
    "eas-cli": "^5.9.1",
    "expo": "^50.0.4",
    "expo-asset": "~9.0.2",
    "expo-splash-screen": "~0.26.4",
    "expo-updates": "~0.24.8",
    "lottie-react-native": "^6.5.1",
    "pretty-format": "^26.5.2",
    "react": "18.2.0",
    "react-native": "npm:react-native-tvos@0.73.2-0",
    "react-native-linear-gradient": "3.0.0-alpha.1",
    "react-native-reanimated": "^3.6.1",
    "react-native-sse": "^1.2.0",
    "react-native-svg": "14.1.0",
    "react-native-vector-icons": "^10.0.0",
    "react-router-native": "^6.15.0"
  },
  "devDependencies": {
    "@react-native-tvos/config-tv": "^0.0.4",
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-decorators": "^7.23.6",
    "@babel/plugin-transform-flow-strip-types": "^7.23.3",
    "@babel/plugin-transform-private-methods": "^7.23.3",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@media-center/dev": "*",
    "@react-native/babel-preset": "0.73.19",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.3",
    "@react-native/typescript-config": "0.73.1",
    "@types/react": "^18.2.6",
    "@types/react-native-vector-icons": "^6.4.14",
    "babel-jest": "^29.6.3",
    "metro-react-native-babel-preset": "0.76.8"
  },
  "engines": {
    "node": ">=20"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native"
      ]
    }
  }
}
